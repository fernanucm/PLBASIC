1 REM Flood Fill program
10 RESTORE 360
20 READ SL,SC
30 REM Initialize screen, canvas and buffer
40 CLS
50 DIM S(5,10)
60 FOR L=0 TO 4
70 FOR C=0 TO 8
80 READ X
90 S(L,C)=X
100 IF S(L,C)=1 THEN GOSUB 260
110 NEXT C
120 NEXT L
130 REM Start filling
140 L=SL
150 C=SC
160 GOSUB 180
170 END
175 REM :FILL
180 IF S(L,C)=1 THEN RETURN
190 S(L,C)=1
200 GOSUB 260
210 IF L>0 THEN L=L-1:GOSUB 180:L=L+1
220 IF L<3 THEN L=L+1:GOSUB 180:L=L-1
230 IF C<9 THEN C=C+1:GOSUB 180:C=C-1
240 IF C>0 THEN C=C-1:GOSUB 180:C=C+1
250 RETURN
255 REM :PLOT
260 LOCATE L,C:PRINT "*";
270 RETURN
275 REM :DATA1
280 REM Cell to start (Line, Column)
290 DATA 1,1
300 REM Initial canvas to be filled
310 DATA 1,1,1,1,1,1,1,1,0
320 DATA 1,0,0,0,0,0,1,0,1
330 DATA 1,0,0,1,1,0,0,0,1
340 DATA 1,1,1,0,1,0,0,0,1
350 DATA 0,0,0,0,1,1,1,1,1
